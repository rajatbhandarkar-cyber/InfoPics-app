<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
   <div class="col-8 offset-2">
     <h3>Edit your post</h3>
    <form method="POST" action = "/posts/<%= post._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input 
            name="post[image]" 
            type="file"
            class="form-control"
            />
        </div>
          <div class="mb-3">
            <i>Original Post Image</i> <br/>
           <img src="<%= originalImageUrl %>"/>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input 
            name="post[location]" 
            value="<%= post.location %>"
            type="text"
            class="form-control"
            required
            />
            <div class="invalid-feedback">Please enter the location name!</div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input 
            name="post[country]" 
            value="<%= post.country %>"
            type="text"
            class="form-control"
            required
            />
            <div class="invalid-feedback">Please enter the country name!</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Experiance / Story</label>
            <textarea 
            name="post[description]" 
            class="form-control"
            required
            ><%= post.description %></textarea>
            <div class="invalid-feedback">Please share your Experiance / Story!</div>
        </div>
       <button class="btn btn-dark">Edit</button>
       <br/><br/>
    </form>
   </div>
</div>
